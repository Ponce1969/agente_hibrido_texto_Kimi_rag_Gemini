# Template de configuración para producción en Orange Pi 5 Plus
# Copiar este archivo a .env y completar con tus valores reales

# --- API Keys y Secretos ---
GROQ_API_KEY=tu_groq_api_key_aqui
GEMINI_API_KEY=tu_gemini_api_key_aqui
BEAR_API_KEY=tu_bear_search_api_key_aqui

# --- Seguridad y Autenticación ---
JWT_SECRET_KEY=tu_jwt_secret_key_muy_segura_aqui_minimo_32_caracteres
JWT_EXPIRE_MINUTES=60

# --- Modelo LLM ---
GROQ_MODEL_NAME=moonshotai/kimi-k2-instruct-0905
GEMINI_MODEL_NAME=gemini-2.5-flash
LLM_PROVIDER_PREFERENCE=gemini_for_pdf_kimi_for_chat
TEMPERATURE=0.3
MAX_TOKENS=8192

# --- Base de Datos ---
DATABASE_URL=sqlite:///./data/chat_history.db
DATABASE_URL_PG=postgresql://user:password@localhost:5432/chatdb
DB_BACKEND=sqlite

# --- Archivos / Contexto ---
FILE_CONTEXT_MAX_CHARS=6000
FILE_MAX_PDF_PAGES=20
FILE_CHAPTER_MAX_PAGES=12
FILE_MAX_PDF_SIZE_MB=50

# --- Embeddings / Rendimiento (Optimizado para Orange Pi 5 Plus) ---
EMBEDDING_BATCH_SIZE=2
EMBEDDING_CHUNK_SIZE=800
EMBEDDING_CHUNK_OVERLAP=200

# --- Búsqueda Python (Brave Search API) ---
BEAR_BASE_URL=https://api.search.brave.com/res/v1/web/search
BEAR_API_KEY=tu_bear_search_api_key_aqui
BEAR_SEARCH_ENABLED=true
BEAR_CACHE_TTL=3600
MAX_SEARCH_RESULTS=10

# --- Búsqueda RAG Adaptativa (Optimizado para 10 PDFs de Python) ---
RAG_SIMPLE_TOP_K=7
RAG_NORMAL_TOP_K=12
RAG_COMPLEX_TOP_K=15

# --- Configuración de Servidor ---
HOST=0.0.0.0
PORT=8000
WORKERS=2
RELOAD=false

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# --- Ollama (Modelos Locales) ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=llama3.1:8b,gemma:2b

# --- LLM Gateway Cache ---
LLM_GATEWAY_CACHE_TTL_HOURS=24
LLM_GATEWAY_CACHE_DB=./data/llm_gateway_cache.db
