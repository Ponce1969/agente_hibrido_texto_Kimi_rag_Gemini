# ============================================
# CONFIGURACIÓN DEL PROYECTO
# ============================================
# Copiar este archivo a .env y configurar con tus valores

# ============================================
# ENTORNO
# ============================================
# development = Swagger UI habilitado en /docs
# production = Swagger UI deshabilitado (seguridad)
ENVIRONMENT=production

# ============================================
# API KEYS (REQUERIDAS)
# ============================================
GROQ_API_KEY=your_groq_key_here
GEMINI_API_KEY=your_gemini_key_here
BEAR_API_KEY=your_bear_key_here

# ============================================
# SEGURIDAD Y AUTENTICACIÓN (REQUERIDO)
# ============================================
# Generar con: python scripts/generate_secret_key.py
JWT_SECRET_KEY=CAMBIAR_ESTO_POR_UNA_CLAVE_SEGURA_GENERADA
JWT_EXPIRE_MINUTES=60
# API Key para acceso interno (LLM Gateway) desde CLI
RAG_API_KEY=tu_clave_secreta_generada_aqui

# ============================================
# POSTGRESQL (REQUERIDO PARA RAG)
# ============================================
POSTGRES_DB=agentes_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# SQLITE (PARA KIMI)
# ============================================
DATABASE_URL=sqlite:///./data/chat_history.db

# ============================================
# CONFIGURACIÓN DE EMBEDDINGS
# Optimizado para equipos con pocos recursos
# ============================================
EMBEDDING_BATCH_SIZE=2
EMBEDDING_CHUNK_SIZE=600
EMBEDDING_CHUNK_OVERLAP=100

# ============================================
# CONFIGURACIÓN DE GUNICORN (PRODUCCIÓN)
# ============================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# ============================================
# CONFIGURACIÓN DE PUERTOS (DOCKER)
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=8501
POSTGRES_PORT_EXTERNAL=5432

# ============================================
# CONFIGURACIÓN DE BACKEND URL (FRONTEND)
# ============================================
BACKEND_URL=http://backend:8000/api/v1

# ============================================
# OPTIMIZACIÓN DE CPU (PARA EQUIPOS MODESTOS)
# ============================================
TOKENIZERS_PARALLELISM=false
OMP_NUM_THREADS=1
INTRA_OP_PARALLELISM_THREADS=1
INTER_OP_PARALLELISM_THREADS=1
